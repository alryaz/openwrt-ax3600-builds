{
    "hass": {
        "description": "Home Assistant OpenWrt integration permissions",
        "read": {
            "ubus": {
                "network.wireless": [
                    "status"
                ],
                "network.device": [
                    "status"
                ],
                "iwinfo": [
                    "info",
                    "assoclist"
                ],
                "hostapd.*": [
                    "get_clients",
                    "wps_status"
                ],
                "system": [
                    "board"
                ],
                "mwan3": [
                    "status"
                ]
            }
        },
        "write": {
            "ubus": {
                "system": [
                    "reboot"
                ],
                "hostapd.*": [
                    "wps_start",
                    "wps_cancel"
                ],
                "rc": [
                    "init"
                ]
            },
            "rc": {
                "/etc/init.d/xray": [
                    "init"
                ],
                "/etc/init.d/openvpn": [
                    "init"
                ],
                "/etc/init.d/dnsmasq": [
                    "init"
                ],
                "/etc/init.d/uhttpd": [
                    "init"
                ]
            }
        }
    }
}